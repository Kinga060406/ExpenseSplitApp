<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExpenseSplitApp"
             x:Class="ExpenseSplitApp.MainPage">

    <StackLayout>
        <Label Text="Grupy" 
               FontSize="Large" 
               HorizontalOptions="Center" />

        <ListView ItemsSource="{Binding Groups}" ItemTapped="OnGroupTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                            <Button Text="Usuń" 
                                    Clicked="OnDeleteGroupClicked" 
                                    BindingContext="{Binding .}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="EndAndExpand"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Dodaj Grupę" 
                Clicked="OnAddGroupClicked" />
    </StackLayout>
</ContentPage>
