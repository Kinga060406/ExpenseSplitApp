<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ExpenseSplitApp"
             x:Class="ExpenseSplitApp.View.ParticipantsPage">

    <StackLayout>
        <Label Text="Uczestnicy" 
               FontSize="Large" 
               HorizontalOptions="Center" />

        <ListView x:Name="participantsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Dodaj Uczestnika" 
                Clicked="OnAddParticipantClicked" />

        <Label Text="Wydatki" 
               FontSize="Large" 
               HorizontalOptions="Center" 
               Margin="20,10,20,0" />

        <ListView x:Name="expensesListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Description}" 
                              Detail="{Binding Amount}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Dodaj Wydatek" 
                Clicked="OnAddExpenseClicked" />

    </StackLayout>
</ContentPage>
